<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_recommend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item">

    <ImageView
        android:id="@+id/iv_movie"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:padding="10dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_movie_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_movie"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_movie"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#222831"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_movie_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_movie"
        android:layout_marginBottom="4dp"
        android:layout_toRightOf="@id/iv_movie"
        android:textColor="@color/primary_gray_dark"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/iv_movie"
        android:background="#fbfbfb" />
</RelativeLayout>
